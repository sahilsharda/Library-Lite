generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  name         String?
  fullName     String?
  role         String        @default("member")
  phone        String?
  address      String?
  authId       String        @unique
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  member       Member?
  loans        Loan[]
  reservations Reservation[]
  payments     Payment[]
  logs         ActivityLog[]
}

model Member {
  id             String    @id @default(uuid())
  userId         String    @unique
  membershipType String    @default("basic")
  startDate      DateTime  @default(now())
  expiryDate     DateTime?
  status         String    @default("active")
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  bio       String?
  createdAt DateTime @default(now())
  books     Book[]
}

model Book {
  id              Int           @id @default(autoincrement())
  title           String
  isbn            String        @unique
  authorId        Int
  publisher       String?
  publishedYear   Int?
  edition         String?
  language        String        @default("English")
  pages           Int?
  genre           String[]
  totalCopies     Int           @default(1)
  availableCopies Int           @default(1)
  coverUrl        String?
  description     String?
  tags            String[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  author          Author        @relation(fields: [authorId], references: [id])
  loans           Loan[]
  reservations    Reservation[]
}

model Loan {
  id         Int       @id @default(autoincrement())
  userId     String
  bookId     Int
  borrowDate DateTime  @default(now())
  dueDate    DateTime
  returnDate DateTime?
  fine       Float     @default(0.0)
  status     String    @default("borrowed")
  notes      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation(fields: [userId], references: [id])
  book       Book      @relation(fields: [bookId], references: [id])
  payments   Payment[]

  @@index([userId])
  @@index([bookId])
  @@index([status])
}

model Reservation {
  id         Int      @id @default(autoincrement())
  userId     String
  bookId     Int
  reservedAt DateTime @default(now())
  status     String   @default("pending")
  notifySent Boolean  @default(false)
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  book       Book     @relation(fields: [bookId], references: [id])

  @@index([userId])
  @@index([bookId])
  @@index([status])
}

model Payment {
  id            Int      @id @default(autoincrement())
  loanId        Int
  userId        String
  amount        Float
  paymentMethod String
  status        String   @default("pending")
  transactionId String?
  paymentDate   DateTime @default(now())
  createdAt     DateTime @default(now())
  loan          Loan     @relation(fields: [loanId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([loanId])
}

model ActivityLog {
  id           Int      @id @default(autoincrement())
  userId       String
  action       String
  resourceType String
  resourceId   String?
  meta         Json?
  timestamp    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([resourceType])
}
